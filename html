pageChangeForTable1(pageNumber: number) {
  this.pagesize = pageNumber;
}

pageChangeForTable2(pageNumber: number) {
  this.page1 = pageNumber;
}

noOfRowsTable1Changed(rows: number) {
  this.noOfRows = rows;
}

noOfRowsTable2Changed(rows: number) {
  this.noOfRows1 = rows;
}



createRangeForTable1(lastPage: number): any {
  let pageArray: any = [];
  for (let i = 0; i < lastPage; i++) {
    const page = {
      label: `${i + 1}`,
      value: i + 1
    };
    pageArray.push(page);
  }
  return pageArray;
}

createRangeForTable2(lastPage: number): any {
  let pageArray: any = [];
  for (let i = 0; i < lastPage; i++) {
    const page = {
      label: `${i + 1}`,
      value: i + 1
    };
    pageArray.push(page);
  }
  return pageArray;
}
