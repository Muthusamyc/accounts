<td ng-if="pltdata.status == Approved" >{{pltdata.status}}</td>


text-primary = New/Intiated
text-primary = Submitted
text-success = Approved
text-info = Implementation
text-warning = Pending
release_text = Released
text-success = Closure

<td [ngStyle]="getStatusColor(pltdata.status)">
  {{ pltdata.status }}
</td>

getStatusColor(status: string): any {
    switch (status) {
      case 'New':
      case 'Initiated':
      case 'Submitted':
        return { 'color': 'blue' };
      case 'Approved':
      case 'Closure':
        return { 'color': 'green' };
      case 'Implementation':
        return { 'color': 'cyan' };
      case 'Pending':
        return { 'color': 'orange' };
      case 'Released':
        return { 'color': 'gray' };
      default:
        return {};
    }
  }



